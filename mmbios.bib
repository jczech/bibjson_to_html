pmid = {27340835},
title = {{Accurate Estimation of Protein Folding and Unfolding Times: Beyond Markov State Models.}},
url = {http://pubs.acs.org/doi/abs/10.1021/acs.jctc.6b00339 http://www.ncbi.nlm.nih.gov/pubmed/27340835 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5022777},
volume = {12},
