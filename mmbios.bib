pages = {12471--12482},
pmid = {28584050},
publisher = {American Society for Biochemistry and Molecular Biology},
title = {{Allosteric modulation of human dopamine transporter activity under conditions promoting its dimerization.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/28584050 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5535022},
