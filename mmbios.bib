title = {{Dendritic trafficking faces physiologically critical speed-precision tradeoffs.}},
url = {http://elifesciences.org/lookup/doi/10.7554/eLife.20556 http://www.ncbi.nlm.nih.gov/pubmed/28034367 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5201421},
volume = {5},
