pages = {e1003521},
pmid = {24699246},
title = {{Exploring the conformational transitions of biomolecular systems using a simple two-state anisotropic network model.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/24699246 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC3974643},
volume = {10},
year = {2014}
}
