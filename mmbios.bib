journal = {Frontiers in Synaptic Neuroscience},
keywords = {Calcium channels,Calcium pumps,Dendritic spines,MMBIOS1-CSP6,MMBIOS1-DBP2,MMBIOS1-TRD2,Synaptic calcium,Synaptic plasticity},
mendeley-tags = {MMBIOS1-CSP6,MMBIOS1-DBP2,MMBIOS1-TRD2},
number = {OCT},
