mendeley-tags = {MMBIOS1-CSP6,MMBIOS1-DBP2,MMBIOS1-TRD2},
number = {NOVEMBER2015},
pages = {e10778},
pmid = {26618907},
title = {{Nanoconnectomic upper bound on the variability of synaptic plasticity}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/26618907 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4737657},
volume = {4},
year = {2015}
