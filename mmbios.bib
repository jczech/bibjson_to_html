keywords = {Amphetamine,Drug modulation mechanism,Human dopamine transporter,MMBIOS1-DBP3,MMBIOS1-TRD1,Orphenadrine cocaine,Repurposable drugs},
mendeley-tags = {MMBIOS1-DBP3,MMBIOS1-TRD1},
