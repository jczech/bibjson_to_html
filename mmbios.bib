month = {may},
number = {18},
pages = {E2489--97},
pmid = {27091992},
title = {{Slide-and-exchange mechanism for rapid and selective transport through the nuclear pore complex.}},
url = {http://www.pnas.org/lookup/doi/10.1073/pnas.1522663113 http://www.ncbi.nlm.nih.gov/pubmed/27091992 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4983827},
